@inject Microsoft.AspNetCore.Identity.SignInManager<AppointmentScheduling.Models.ApplicationUser> signInManager
@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-action="LogOut" asp-controller="Account">
        <ul class="nav navbar-nav">
            <li>
                <span class="nav-link text-white">Hello, @User.Identity.Name</span>
            </li>
            <li>
                <a class="text-white-50 nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log Out</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav">
        <li>
            <a class="nav-link text-white" id="registerLink" asp-action="Register" asp-controller="Account">Register</a>
        </li>
        <li>
            <a class="nav-link text-white" id="loginLink" asp-action="Login" asp-controller="Account">Login</a>
        </li>
    </ul>
}