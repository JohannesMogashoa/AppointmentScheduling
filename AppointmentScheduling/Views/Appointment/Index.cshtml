@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{ 
    ViewData["Title"] = "Appointments";
}

<div class="row">
    <div class="container">
        @if (User.IsInRole(AppointmentScheduling.Utilities.Helper.Admin))
        {
        <div class="row">
            <div class="form-group col-4" id="divDoctorList">
                <label> Select Doctor </label>
                @Html.DropDownList("doctorId", new SelectList(ViewBag.DoctorList, "Id", "Name"), new { @class = "form-control select2", @onchange = "onDoctorChange()" })
            </div>
            <div class="col-3 offset-5">
                <a asp-controller="Account" asp-action="Register" class="btn btn-secondary form-control">Add New Admin</a>
            </div>
        </div>
        }
        <div id="calendar"></div>
    </div>
</div>

<partial name="_AddEditAppointment" />

<div class="text-right pt-2">
    <p>@HttpContextAccessor.HttpContext.Session.GetString("userName")'s account is logged in.</p>
</div>