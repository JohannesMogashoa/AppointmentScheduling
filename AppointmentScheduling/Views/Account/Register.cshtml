@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>Sign Up</h2>
<div class="row">
    <div class="col-md-8">
        <section id="signupForm">
            <form id="account" method="post" asp-action="Register" asp-controller="Account">
                @if (User.IsInRole(AppointmentScheduling.Utilities.Helper.Admin))
                {
                    <h4>Add a new admin account.</h4>
                }
                else
                {
                    <h4>Create a new account.</h4>
                }
                <hr role="presentation" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label class="col-md-2" asp-for="Name"></label>
                    <div class="col-md-10">
                        <input class="form-control" asp-for="Name" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-2" asp-for="Email"></label>
                    <div class="col-md-10">
                        <input class="form-control" asp-for="Email" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-2" asp-for="Password"></label>
                    <div class="col-md-10">
                        <input class="form-control" type="password" asp-for="Password" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-2" asp-for="ConfirmPassword"></label>
                    <div class="col-md-10">
                        <input class="form-control" type="password" asp-for="ConfirmPassword" />
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-2" asp-for="RoleName"></label>
                    <div class="col-md-10">
                        <select class="form-control" 
                                asp-items="@Helper.GetRolesForDropdown(User.IsInRole(AppointmentScheduling.Utilities.Helper.Admin))" 
                                asp-for="RoleName">
                        </select>
                        <span class="text-danger" asp-validation-for="RoleName"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 offset-md-2 checkbox">
                        <input type="submit" value="Register" class="btn btn-success" />
                    </div>
                </div>
                <p class="col-md-10 offset-md-2">
                    <a asp-action="Login">Log In</a>
                </p>
            </form>
        </section>
    </div>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial"/>
}